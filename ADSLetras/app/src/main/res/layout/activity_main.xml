<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoifce_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/nome_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoif" />

    <TextView
        android:id="@+id/nome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="56dp"
        android:text="Nome: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/curso_text"
        app:layout_constraintEnd_toStartOf="@+id/nome_inputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoifce_img" />

    <TextView
        android:id="@+id/curso_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="52dp"
        android:text="Curso: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/semestre_text"
        app:layout_constraintEnd_toStartOf="@+id/cursos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_text" />

    <EditText
        android:id="@+id/nome_inputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        android:ems="10"
        android:hint="Insira seu nome"
        android:inputType="text"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/nome_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nome_text" />

    <RadioGroup
        android:id="@+id/cursos"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/semestre_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/curso_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_inputText"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/ads_btn"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="ADS" />

        <RadioButton
            android:id="@+id/letras_btn"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="Letras" />
    </RadioGroup>

    <TextView
        android:id="@+id/semestre_text"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        android:text="Semestre: "
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/enviar_btn"
        app:layout_constraintEnd_toStartOf="@+id/semestre_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso_text" />

    <Spinner
        android:id="@+id/semestre_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/semestre_text"
        app:layout_constraintTop_toTopOf="@+id/semestre_text" />

    <Button
        android:id="@+id/enviar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="293dp"
        android:text="Enviar"
        android:textSize="17dp"
        android:onClick="verifica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/semestre_spinner"
        app:layout_constraintTop_toBottomOf="@+id/semestre_text" />

</androidx.constraintlayout.widget.ConstraintLayout>